<div class="page-header">
  <h3>Vehicle #<%= @vehicle.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Customer</dt>
      <dd><%= @vehicle.customer_id %></dd>

      <dt>Notes</dt>
      <dd><%= @vehicle.notes %></dd>

      <dt>Color</dt>
      <dd><%= @vehicle.color %></dd>

      <dt>Mileage</dt>
      <dd><%= @vehicle.mileage %></dd>

      <dt>Year</dt>
      <dd><%= @vehicle.year %></dd>

      <dt>Model</dt>
      <dd><%= @vehicle.model %></dd>

      <dt>Make</dt>
      <dd><%= @vehicle.make %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/vehicles" class="btn btn-primary">
        Back
      </a>
      <a href="/vehicles/<%= @vehicle.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_vehicle/<%= @vehicle.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
