<div class="page-header">
  <h1>
    Vehicles
    <a href="/vehicles/new" class="btn btn-lg btn-success">New Vehicle</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Color</th>
        <th>Year</th>
        <th>Mileage</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.mileage %></td>
        <td><%= vehicle.notes %></td>
        <td>
          <a href="/vehicles/<%= vehicle.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_vehicle/<%= vehicle.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
