<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_photo/<%= @photo.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for job_id -->
      <div class="form-group">
        <label for="job_id" class="control-label">
          Job
        </label>

        <input type="text" id="job_id" name="job_id" placeholder="Job" class="form-control" value="<%= @photo.job_id %>">
      </div>

      <!-- Label and input for message_id -->
      <div class="form-group">
        <label for="message_id" class="control-label">
          Message
        </label>

        <input type="text" id="message_id" name="message_id" placeholder="Message" class="form-control" value="<%= @photo.message_id %>">
      </div>

      <!-- Label and input for feed_id -->
      <div class="form-group">
        <label for="feed_id" class="control-label">
          Feed
        </label>

        <input type="text" id="feed_id" name="feed_id" placeholder="Feed" class="form-control" value="<%= @photo.feed_id %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @photo.image %>">
      </div>

      <button class="btn btn-warning">
        Update Photo
      </button>
      or
      <a href="/photos/<%= @photo.id %>">Cancel</a>
    </form>
  </div>
</div>
