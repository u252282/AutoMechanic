<div class="page-header">
  <h1>
    Garages
    <%if current_user.role=="Admin"%>
    <a href="/garages/new" class="btn btn-lg btn-success">New Garage</a>
    <%end%>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address line 1</th>
        <th>Address line 2</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
        <th>Phone number</th>
        <%if current_user.role=="Admin"%>
        <th>Actions</th>
        <%end%>
      </tr>

      <% @garages.each do |garage| %>
      <tr>
        <td><%= garage.name %></td>
        <td><%= garage.address_line_1 %></td>
        <td><%= garage.address_line_2 %></td>
        <td><%= garage.city %></td>
        <td><%= garage.state %></td>
        <td><%= garage.zipcode %></td>



        <td><%= garage.phone_number %></td>
        <%if current_user.role=="Admin"%>

        <td>


          <a href="/garages/<%= garage.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_garage/<%= garage.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
        <%end%>
      </tr>
      <% end %>
    </table>
  </div>
</div>
