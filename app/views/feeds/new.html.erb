<!-- Validation failure messages -->
<% if @feed.errors.any? %>
  <% @feed.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add a Status Update</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_feed" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <!-- Label and input for vehicle_id -->
      <div class="form-group">
        <label for="comment" class="control-label">
          Enter the status
        </label>
        <input type="text" id="comment" name="comment" placeholder="Comment" class="form-control" value="<%= @feed.comment %>">
      </div>
      <div class="form-group">

      <input type="hidden" name = "job_id" value="<%=@job_id%>">
      </div>

      <button class="btn btn-success">
      Update
      </button>
      or
      <a href="/jobs">Cancel</a>
    </form>
  </div>
</div>
