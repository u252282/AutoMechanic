<div class="page-header">
  <h1>
    Timeslots
    <a href="/timeslots/new" class="btn btn-lg btn-success">New Timeslot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Job</th>
        <th>Mechanic</th>
        <th>Timeslot</th>
        <th>Actions</th>
      </tr>

      <% @timeslots.each do |timeslot| %>
      <tr>
        <td><%= timeslot.job_id %></td>
        <td><%= timeslot.mechanic_id %></td>
        <td><%= timeslot.timeslot.localtime %></td>
        <td>
          <a href="/timeslots/<%= timeslot.id %>" class="btn btn-primary">Show</a>
          <a href="/timeslots/<%= timeslot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_timeslot/<%= timeslot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
