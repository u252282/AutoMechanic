<!-- Validation failure messages -->
<% if @timeslot.errors.any? %>
  <% @timeslot.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Timeslot #<%= @timeslot.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_timeslot/<%= @timeslot.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for job_id -->
      <div class="form-group">
        <label for="job_id" class="control-label">
          Job
        </label>

        <input type="text" id="job_id" name="job_id" placeholder="Job" class="form-control" value="<%= @timeslot.job_id %>">
      </div>

      <!-- Label and input for mechanic_id -->
      <div class="form-group">
        <label for="mechanic_id" class="control-label">
          Mechanic
        </label>

        <input type="text" id="mechanic_id" name="mechanic_id" placeholder="Mechanic" class="form-control" value="<%= @timeslot.mechanic_id %>">
      </div>

      <!-- Label and input for timeslot -->
      <div class="form-group">
        <label for="timeslot" class="control-label">
          Timeslot
        </label>

        <input type="text" id="timeslot" name="timeslot" placeholder="Timeslot" class="form-control" value="<%= @timeslot.timeslot %>">
      </div>

      <button class="btn btn-warning">
        Update Timeslot
      </button>
      or
      <a href="/timeslots/<%= @timeslot.id %>">Cancel</a>
    </form>
  </div>
</div>
